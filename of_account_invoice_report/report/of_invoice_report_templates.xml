<?xml version="1.0"?>
<odoo>

<template id="account.report_invoice_document">
    <t t-call="report.external_layout">
        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
        <!--####################
            La vue d'origine est entièrement réécrite ici.
            ####################-->
        <div class="page">
            <div name="invoice_address" class="row">
                <div class="col-xs-6"></div>
                <div class="col-xs-5 col-xs-offset-1">
                    <t t-set="the_address" t-value="o.partner_id"/>
                    <t t-if="o.pdf_afficher_nom_parent()">
                        <t t-if="the_address.parent_id"><t t-set="the_address" t-value="the_address.parent_id"/></t>
                    </t>
                    <t t-if="the_address.title and o.pdf_afficher_civilite()"><span t-field="the_address.title"/></t>
                    <t t-if="the_address.name"><span t-field="the_address.name"/></t>
                    <t t-if="not the_address.name and the_address.parent_id"><span t-field="the_address.parent_id.name"/></t>
                    <address t-field="o.partner_id"
                        t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
                    <t t-if="o.partner_id.phone and o.pdf_afficher_telephone()">Tél. <span t-field="o.partner_id.phone"/><br/></t>
                    <t t-if="o.partner_id.mobile and o.pdf_afficher_mobile()">Tél. <span t-field="o.partner_id.mobile"/><br/></t>
                    <t t-if="o.partner_id.fax and o.pdf_afficher_fax()">Fax <span t-field="o.partner_id.fax"/><br/></t>
                    <t t-if="o.partner_id.email and o.pdf_afficher_email()"><span t-field="o.partner_id.email"/><br/></t>
                    <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>
                </div>
            </div>

            <h2></h2>

            <div class="row mt32 mb32" name="vos_references">
            <div class="col-xs-12">
                <div><strong>References: </strong></div>
                <div class="mt8" id="informations" style="display: table">
                    <div t-if="o.name" style="padding: 8px 16px 4px; border: 1px solid darkgray; display: table-cell; border-radius: 8px;">
                        <strong>Doc Descr.:</strong>
                        <p t-field="o.name"/>
                    </div>
                    <div t-if="o.name" style="display: table-cell; width: 4px;"/>

                    <div t-if="o.partner_id.ref" style="padding: 8px 16px 4px; border: 1px solid darkgray; display: table-cell; border-radius: 8px;">
                        <strong>Customer Ref:</strong>
                        <p t-field="o.partner_id.ref"/>
                    </div>
                    <div t-if="o.partner_id.ref" style="display: table-cell; width: 4px;"/>

                    <div t-if="o.origin" style="padding: 8px 16px 4px; border: 1px solid darkgray; display: table-cell; border-radius: 8px;">
                        <strong>Origin:</strong>
                        <p t-field="o.origin"/>
                    </div>
                    <div t-if="o.origin" style="display: table-cell; width: 4px;"/>

                    <div t-if="o.date_due and o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')" style="padding: 8px 16px 4px; border: 1px solid darkgray; display: table-cell; border-radius: 8px;">
                        <strong>Due Date:</strong>
                        <p t-field="o.date_due"/>
                    </div>
                    <div t-if="o.date_due and o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')" style="display: table-cell; width: 4px;"/>

                    <div t-if="o.user_id" style="padding: 8px 16px 4px; border: 1px solid darkgray; display: table-cell; border-radius: 8px;">
                        <strong>Salesperson:</strong>
                        <p>
                            <span t-field="o.user_id"/><br t-if="o.user_id.phone or o.user_id.mobile"/>
                            <span t-if="o.user_id.phone" t-field="o.user_id.phone"/><br t-if="o.user_id.phone and o.user_id.mobile"/>
                            <span t-if="o.user_id.mobile" t-field="o.user_id.mobile"/>
                        </p>
                    </div>
                    <div t-if="o.user_id" style="display: table-cell; width: 4px;"/>

                    <div t-if="o.reference and o.type == 'in_invoice'" style="padding: 8px 16px 4px; border: 1px solid darkgray; display: table-cell; border-radius: 8px;">
                        <strong>Doc Ref:</strong>
                        <p t-field="o.reference"/>
                    </div>
                    <div name="reference" t-if="o.reference and o.type == 'in_invoice'" style="display: table-cell; width: 4px;"/>
                </div>
            </div>
            </div>

            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th style="width: 60%">Description</th>
                        <th class="hidden">Source Doc</th>
                        <th class="text-right">Qty</th>
                        <th class="text-right">Unit Price</th>
                        <th t-if="display_discount" class="text-right">Disc.(%)</th>
                        <th class="text-right">Taxes</th>
                        <th class="text-right">Tax Excluded Price</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="o.invoice_line_ids" t-as="l">
                        <td><span t-field="l.name"/></td>
                        <td class="hidden"><span t-field="l.origin"/></td>
                        <td class="text-right">
                            <span t-field="l.quantity"/>
                            <span t-field="l.uom_id"  groups="product.group_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_unit"/>
                        </td>
                        <td t-if="display_discount" class="text-right">
                            <span t-field="l.discount"/>
                        </td>
                        <td class="text-right">
                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_subtotal" 
                                t-tag='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div name="subdivision" class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Subtotal</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                            <tr>
                                <td><span t-esc="amount_by_group[0] if len(o.tax_line_ids) > 1 else (o.tax_line_ids.tax_id.description or o.tax_line_ids.tax_id.name)"/></td>
                                <td class="text-right">
                                    <span t-esc="amount_by_group[1]" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </t>
                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                 <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <t t-set="payments" t-value="json.loads(o.payments_widget)"/>
                        <t t-if="payments">
                            <tr t-foreach="payments['content']" t-as="payment">
                                <td class="col-xs-8 pull-right">
                                    <t t-set="payment_entry" t-value="o.env['account.move'].browse(payment['move_id'])"/>
                                    <i name="payments_data"><span>Paid on </span><span t-field="payment_entry.date"/></i>
                                </td>
                                <td>
                                    <span class="pull-right text-right"><t t-esc="payment['amount']" t-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/></span>
                                    <!--span class="pull-right text-right"><t t-esc="payment['amount']" t-esc-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/></span-->
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Amount left </strong></td>
                                <td class="text-right">
                                    <span t-field="o.residual" t-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    <!--span t-field="o.residual" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/-->
                                </td>
                            </tr>
                        </t>
                    </table>
                </div>
            </div>

            <!-- DO NOT REMOVE THIS TABLE. MANDATORY IN SOME COUNTRIES -->
            <div class="row" t-if="len(o.tax_line_ids) > 0">
                <div class="col-xs-6">
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Tax</th>
                                <th class="text-right">Base</th>
                                <th class="text-right">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.tax_line_ids" t-as="t">
                                <td><span t-field="t.tax_id.description"/></td>
                                <td class="text-right">
                                    <span t-field="t.base" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                                <td class="text-right">
                                    <span t-field="t.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- à conserver: héritage -->
            <p t-if="o.comment">
                <strong>Comment:</strong>
                <span t-field="o.comment"/>
            </p>
            <p t-if="o.payment_term_id">
                <span t-field="o.payment_term_id.note"/>
            </p>
            <p t-if="o.fiscal_position_id.note">
                <strong>Fiscal Position Remark:</strong>
                <span t-field="o.fiscal_position_id.note"/>
            </p>
        </div>
    </t>
</template>

<!-- Vue à priorité faible pour limiter les problèmes d'héritage -->
<template id="of_report_invoice_document" inherit_id="account.report_invoice_document" priority="30">
    <xpath expr="//span[@t-field='l.name']" position="replace">
        <t t-set="the_name" t-value="l.of_get_line_name()"/>
        <t t-set="name_line" t-value="the_name[0]"/>
        <t t-set="the_name" t-value="the_name[1:]"/>
        <span t-esc="name_line"/>
        <t t-foreach="the_name" t-as="name_line">
            <span t-esc="name_line"/>
        </t>
        <span t-field="l.name" style="display: none;"/>  <!-- à conserver pour héritages -->
    </xpath>
</template>

<template id="report_invoice">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="account.report_invoice_document" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>

</odoo>
