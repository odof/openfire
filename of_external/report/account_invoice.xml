<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Modification des pdf factures-->
    <template id="of_external_invoice_document" inherit_id="account.report_invoice_document">
        <div name="invoice_address" position="after">
            <h3 t-if="o.company_id.of_position_header_lines == 'bandeau_totalite' and o.company_id.of_display_pastille_as_title">
                <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Facture </span>
                <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">Facture PRO-FORMA </span>
                <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Facture brouillon </span>
                <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Facture annul√©e </span>
                <span t-if="o.type == 'out_refund'">Avoir </span>
                <span t-if="o.type == 'in_refund'">Avoir fournisseur </span>
                <span t-if="o.type == 'in_invoice'">Facture fournisseur </span>
                <t t-if="o.date_invoice"><span t-field="o.number"/> du <span t-field="o.date_invoice" t-options="{'format': 'dd/MM/yyyy'}"/></t>
            </h3>
        </div>
    </template>

</odoo>
