<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <template id="of_sale_order_dates_report_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-set='pdf_masquer_payment_term']" position="after">
            <t t-set="pdf_display_requested_week" t-value="doc.pdf_display_requested_week()"/>
        </xpath>
        <xpath expr="//div[@name='pastille_date_vt']" position="before">
            <div t-if="doc.of_requested_week and pdf_display_requested_week" name="requested_week"
                 style="flex: 1; padding: 8px 16px; border: 1px solid darkgray; display: table-cell; border-radius: 8px;">
                <strong>Semaine demand√©e&amp;nbsp;:</strong>
                <p t-field="doc.of_requested_week"/>
            </div>
            <div t-if="doc.of_requested_week and pdf_display_requested_week" style="display: table-cell; width: 4px;"/>
        </xpath>
    </template>

</odoo>
