<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="of_sale_payment_saleorder_document_with_payments" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@name='total']" position="replace">
            <div class="row" name="total">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Total sans taxes</strong></td>
                            <td class="text-right">
                                <span t-field="doc.amount_untaxed"
                                    t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                            </td>
                        </tr>
                        <t t-foreach="doc._get_tax_amount_by_group()" t-as="amount_by_group">
                            <tr>
                                <td><span t-esc="amount_by_group[0] or 'Taxes'"/></td>
                                <td class="text-right">
                                    <span t-esc="amount_by_group[1]"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                            </tr>
                        </t>
                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="doc.amount_total"
                                    t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                            </td>

                            <t t-if="doc.payment_ids and doc.state != 'draft' and doc.of_print_payments">
                                <tr t-foreach="doc._of_get_payment_display_amounts()" t-as="payment">
                                    <td class="col-xs-8 pull-right">
                                        <i name="payments_data"><span t-esc="payment[0].get_payment_mode_display()"/></i>
                                    </td>
                                    <td>
                                        <span class="pull-right text-right"><t t-esc="payment[1]" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></span>
                                    </td>
                                </tr>
                            </t>

                        </tr>
                        <t t-if="doc.payment_ids and doc.state != 'draft' and doc.of_print_payments">
                            <tr class="border-black">
                                <td><strong>Montant d√ª</strong></td>
                                    <td class="text-right">
                                    <span t-field="doc.of_balance"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                            </tr>
                        </t>
                    </table>
               </div>
            </div>
        </xpath>
    </template>
</odoo>
