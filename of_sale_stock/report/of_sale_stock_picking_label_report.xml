<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="report_paperformat_euro_internal_a3" model="report.paperformat">
        <field name="name">European A3 Internal</field>
        <field name="default" eval="True" />
        <field name="format">A3</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">10</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">0</field>
    </record>

    <report
        id="of_stock_picking_label_report_action"
        string="Ã‰tiquette"
        model="stock.picking"
        report_type="qweb-pdf"
        name="of_sale_stock.of_stock_picking_label_report"
        paperformat="of_sale_stock.report_paperformat_euro_internal_a3"
    />

    <template id="of_stock_picking_label_report_document">
        <t t-call="report.html_container">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <div class="page">
                <div style="height: 1924px !important;">
                    <div name="div_partner_name_1" class="row text-center" style="border: 2px solid black;text-transform: uppercase;width: 100%; height: 17% !important;">
                        <h1><strong><span>REF CLIENT : </span><span t-field="o.partner_id.display_name"/></strong></h1>
                    </div>
                    <div name="div_name_1" class="row text-center" style="border: 2px solid black;border-top: 0px;text-transform: uppercase;width: 100%; height: 16% !important;">
                        <h1><strong><span t-field="o.name"/></strong></h1>
                    </div>
                    <div name="div_of_min_week_1" class="row text-center" style="border: 2px solid black;border-top: 0px;text-transform: uppercase;width: 100%; height: 17% !important;">
                        <h1><strong><span>SEM PREVU : </span><span t-field="o.of_min_week"/></strong></h1>
                    </div>

                    <div name="div_partner_name_2" class="row text-center" style="border: 2px solid black;border-top: 0px;text-transform: uppercase;width: 100%; height: 17% !important;">
                        <h1><strong><span>REF CLIENT : </span><span t-field="o.partner_id.display_name"/></strong></h1>
                    </div>
                    <div  name="div_name_2" class="row text-center" style="border: 2px solid black;border-top: 0px;text-transform: uppercase;width: 100%; height: 16% !important;">
                        <h1><strong><span t-field="o.name"/></strong></h1>
                    </div>
                    <div name="div_of_min_week_2" class="row text-center" style="border: 2px solid black;border-top: 0px;text-transform: uppercase;width: 100%; height: 17% !important;">
                        <h1><strong><span>SEM PREVU : </span><span t-field="o.of_min_week"/></strong></h1>
                    </div>
                </div>
            </div>
        </t>
    </template>


    <template id="of_stock_picking_label_report">
        <t t-foreach="docs" t-as="o">
            <t t-call="of_sale_stock.of_stock_picking_label_report_document" t-lang="o.partner_id.lang"/>
        </t>
    </template>

</odoo>
