<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="of_sale_activity_view_form" model="ir.ui.view">
        <field name="name">of.sale.activity.view.form</field>
        <field name="model">of.sale.activity</field>
        <field name="arch" type="xml">
            <form string="Activity">
                <header>
                    <field name="is_overdue" invisible="1"/>
                    <field name="load_attachment" invisible="1"/>
                    <field name="uploaded_attachment_id" invisible="1"/>
                    <button name="action_add_attachment" class="btn btn-sm" type="object" string="Add attachments"
                        attrs="{'invisible': ['|', ('load_attachment', '=', False), ('uploaded_attachment_id', '!=', False)]}"/>
                    <button string="Plan" name="action_plan" type="object" states="cancelled,done"/>
                    <button string="Complete" name="action_complete" type="object" class="oe_highlight" states="planned"/>
                    <button string="Cancel" name="action_cancel" type="object" states="planned"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="order_id"/>
                        <field name="activity_id"/>
                        <field name="summary"/>
                        <field name="user_id"/>
                        <field name="date_deadline"/>
                        <field name="description"/>
                        <field name="report"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="of_sale_activity_view_tree" model="ir.ui.view">
        <field name="name">of.sale.activity.view.tree</field>
        <field name="model">of.sale.activity</field>
        <field name="arch" type="xml">
            <tree string="Activities" decoration-danger="is_overdue">
                <field name="is_overdue" invisible="1"/>
                <field name="load_attachment" invisible="1"/>
                <field name="uploaded_attachment_id" invisible="1"/>
                <field name="order_id"/>
                <field name="summary"/>
                <field name="activity_id"/>
                <field name="date_deadline"/>
                <field name="user_id"/>
                <field name="state"/>
                <button name="action_add_attachment" icon="fa-upload" type="object" string="Add attachments" 
                    attrs="{'invisible': ['|', ('load_attachment', '=', False), ('uploaded_attachment_id', '!=', False)]}"/>
                <button name="action_plan" icon="fa-undo" type="object" string="Plan" 
                    attrs="{'invisible': [('state', '=', 'planned')]}"/>
                <button name="action_complete" icon="fa-check" type="object" string="Complete"
                    attrs="{'invisible': [('state', '!=', 'planned')]}"/>
                <button name="action_cancel" icon="fa-close" type="object" string="Cancel" 
                    attrs="{'invisible': [('state', '!=', 'planned')]}"/>
            </tree>
        </field>
    </record>

    <record id="of_sale_activity_view_search" model="ir.ui.view">
        <field name="name">of.sale.activity.view.search</field>
        <field name="model">of.sale.activity</field>
        <field name="arch" type="xml">
            <search string="Activities">
                <field name="order_id"/>
                <field name="summary"/>
                <field name="activity_id"/>
                <field name="date_deadline"/>
                <field name="user_id"/>
                <filter name="planned" string="Planned" domain="[('state', '=', 'planned')]" />
                <filter name="cancelled" string="Cancelled" domain="[('state', '=', 'cancelled')]" />
                <filter name="done" string="Done" domain="[('state', '=', 'done')]" />
                <filter name="late" string="Late" 
                    domain="[('state', '=', 'planned'), ('date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]" />
                <group expand="0" string="Group By">
                    <filter string="Order" domain="[]" context="{'group_by':'order_id'}"/>
                    <filter string="Assigned to" domain="[]" context="{'group_by':'user_id'}"/>
                    <filter string="State" domain="[]" context="{'group_by':'state'}"/>
                    <filter string="Deadline date" domain="[]" context="{'group_by':'date_deadline'}"/>
                    <filter string="Activity type" domain="[]" context="{'group_by':'activity_id'}"/>
                </group>
            </search>
        </field>
     </record>

    <record id="of_sale_activity_action" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="res_model">of.sale.activity</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="of_sale_activity_menu" name="Activities" action="of_sale_activity_action" parent="sales_team.menu_sales" sequence="15"/>

</odoo>
