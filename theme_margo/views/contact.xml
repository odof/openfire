<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>

		<!-- Contact Page -->
		<template id="contactus_form2" name="Contact Form"
			inherit_id="website_crm.contactus_form" customize_show="True">

		<xpath expr="//div[@class='container']" position="replace">
		
			<section class="s_google_map" data-map-type="ROADMAP"
				data-map-color="" data-map-zoom="12" data-map-gps="(50.854975,4.3753899)"
				data-pin-style="flat" style="height: 488px; overflow: hidden;">
				<div class="map_container" />
				<div class="description">
					<font>Visit us:</font>
					<span> Our office is located in Tunisia. TEL (216) 21 809 219 </span>
				</div>
			</section>

				<div class="container" style="padding: 60px 0px;">
					<div class="row">
						<div class="col-md-8">
							<!-- Classic Heading -->
							<h4 class="classic-title">
								<span>Contact Us</span>
							</h4>

							<form action="/crm/contactus" method="post" class="form-horizontal mt32"
								enctype="multipart/form-data">
								<div
									t-attf-class="form-group #{error and 'contact_name' in error and 'has-error' or ''}">
									<input type="text" class="form-control" placeholder="Your Name"
										name="contact_name" required="True" t-attf-value="#{contact_name or ''}" />
								</div>
								<div
									t-attf-class="form-group #{error and 'phone' in error and 'has-error' or ''}">
									<input type="text" class="form-control" name="phone"
										placeholder="Phone Number" t-attf-value="#{phone or ''}" />
								</div>
								<div name="email_from_container"
									t-attf-class="form-group #{error and 'email_from' in error and 'has-error' or ''}">
									<input type="email" class="form-control" placeholder="Email"
										name="email_from" required="True" t-attf-value="#{email_from or ''}" />
								</div>
								<div
									t-attf-class="form-group #{error and 'name' in error and 'has-error' or ''}">
									<input type="text" class="form-control" placeholder="Subject"
										name="name" t-attf-value="#{name or ''}" />
								</div>
								<div
									t-attf-class="form-group #{error and 'description' in error and 'has-error' or ''}">
									<textarea class="form-control" placeholder="Your Question"
										name="description" style="min-height: 120px" required="True">
										<t t-esc="description or ''" />
									</textarea>
								</div>
								<t t-foreach="kwargs" t-as="kwarg">
									<input type="hidden" t-att-name="kwarg[0]" t-att-value="kwarg[1]" />
								</t>

								<button id="submit" class="btn-system btn-large">Send
								</button>
							</form>
						</div>


						<div class="col-md-4">
							<!-- Classic Heading -->
							<h4 class="classic-title">
								<span>Information</span>
							</h4>

							<!-- Some Info -->
							<p>
								<strong>
									<span t-field="res_company.name" />
								</strong>
							</p>

							<!-- Divider -->
							<div class="hr1" style="margin-bottom:10px;"></div>

							<!-- Info - Icons List -->
							<ul class="icons-list">
								<li>
									<i class="fa fa-globe">
									</i>
									<strong>Address:</strong>
									<span t-field="res_company.street" />
									<span t-field="res_company.street2" />
									,
									<span t-field="res_company.country_id" />
								</li>
								<li>
									<i class="fa fa-envelope-o"></i>
									<strong>Email:</strong>
									<span t-field="res_company.email" />
								</li>
								<li>
									<i class="fa fa-mobile"></i>
									<strong>Phone:</strong>
									<span t-field="res_company.phone"></span>
								</li>
							</ul>

							<!-- Divider -->
							<div class="hr1" style="margin-bottom:15px;"></div>

							<!-- Classic Heading -->
							<h4 class="classic-title">
								<span>Working Hours</span>
							</h4>

							<!-- Info - List -->
							<ul class="list-unstyled">
								<li>
									<strong>Monday - Friday</strong>
									- 9am to 5pm
								</li>
								<li>
									<strong>Saturday</strong>
									- 9am to 2pm
								</li>
								<li>
									<strong>Sunday</strong>
									- Closed
								</li>
							</ul>
						</div>
					</div>
				</div>
			</xpath>
		</template>
	</data>
</openerp>