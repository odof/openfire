<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>

		<!-- Contact Page -->
		<template id="contactus_form2" name="Mrgo Contact Form" inherit_id="website.contactus" customize_show="True">
		<xpath expr="//div[@class='container']" position="replace">
		
		 
		 	<section id="s_google_map" >
				<div class="col-md-12 google-map">
					<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3193.2580905247996!2d10.13782701529096!3d36.836294479941174!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12fd33113a801ff9%3A0x6574eb87ef815b80!2sAvenue+Mohamed+Abdelwaheb%2C+Tunis%2C+Tunisie!5e0!3m2!1sfr!2sfr!4v1446336690257" width="100%" height="400" frameborder="0" style="border:0" ></iframe>
				</div>
			</section>
				
				<div class="container" style="padding: 60px 0px;">
					<div class="row">
						<div class="col-md-8" style="margin-top: 40px;">
							<!-- Classic Heading -->
							<h4 class="classic-title">
								<span>Contact Us</span>
							</h4>
									
							  <form action="/website_form/" method="post" data-model_name="crm.lead" data-success_page="/page/website_crm.contactus_thanks" class="s_website_form form-horizontal container-fluid mt32" enctype="multipart/form-data">
		                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
		                        <div class="form-group form-field o_website_form_required_custom">
		                            <div>
		                                <input type="text" class="form-control o_website_form_input" placeholder="Your Name" name="contact_name" required=""/>
		                            </div>
		                        </div>
		                        <div class="form-group form-field">
		                            <div>
		                                <input type="text" class="form-control o_website_form_input"  placeholder="Phone Number" name="phone"/>
		                            </div>
		                        </div>
		                        <div class="form-group form-field o_website_form_required_custom">
		                            <div>
		                                <input type="text" class="form-control o_website_form_input" placeholder="Email" name="email_from" required=""/>
		                            </div>
		                        </div>
		                        <div class="form-group form-field o_website_form_required_custom">
		                            <div>
		                                <input type="text" class="form-control o_website_form_input" placeholder="Your Company" name="partner_name" required=""/>
		                            </div>
		                        </div>
		                        <div class="form-group form-field o_website_form_required">
		                            <div>
		                                <input type="text" class="form-control o_website_form_input" placeholder="Subject" name="name" required=""/>
		                            </div>
		                        </div>
		                        <div class="form-group form-field o_website_form_required_custom">
		                            <div>
		                                <textarea class="form-control o_website_form_input" placeholder="Your Question"  name="description" required=""></textarea>
		                            </div>
		                        </div>
		                        <div class="form-group">
		                            <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
		                                <button class="btn-system btn-large o_website_form_send">Send</button>
		                                <span id="o_website_form_result"></span>
		                            </div>
		                        </div>
		                    </form>
							 
						</div>


						<div class="col-md-4"  style="margin-top: 40px;">
							<!-- Classic Heading -->
							<h4 class="classic-title">
								<span>Information</span>
							</h4>

							<!-- Some Info -->
							<p>
								<strong>
									<span t-field="res_company.name" />
								</strong>
							</p>

							<!-- Divider -->
							<div class="hr1" style="margin-bottom:10px;"></div>

							<!-- Info - Icons List -->
							<ul class="icons-list">
								<li>
									<i class="fa fa-globe">
									</i>
									<strong>Address:</strong>
									<span t-field="res_company.street" />
									<span t-field="res_company.street2" />
									,
									<span t-field="res_company.country_id" />
								</li>
								<li>
									<i class="fa fa-envelope-o"></i>
									<strong>Email:</strong>
									<span t-field="res_company.email" />
								</li>
								<li>
									<i class="fa fa-mobile"></i>
									<strong>Phone:</strong>
									<span t-field="res_company.phone"></span>
								</li>
							</ul>

							<!-- Divider -->
							<div class="hr1" style="margin-bottom:15px;"></div>

							<!-- Classic Heading -->
							<h4 class="classic-title">
								<span>Working Hours</span>
							</h4>

							<!-- Info - List -->
							<ul class="list-unstyled">
								<li>
									<strong>Monday - Friday</strong>
									- 9am to 5pm
								</li>
								<li>
									<strong>Saturday</strong>
									- 9am to 2pm
								</li>
								<li>
									<strong>Sunday</strong>
									- Closed
								</li>
							</ul>
						</div>
					</div>
				</div>
			</xpath>
		</template>
	</data>
</openerp>