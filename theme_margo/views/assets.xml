<?xml version="1.0" encoding="utf-8" ?>
<openerp>

	<data noupdate="1">
		<!-- Jump to website after theme installation -->
		<record id="base.open_menu" model="ir.actions.todo">
			<field name="action_id" ref="website.action_website" />
			<field name="state">open</field>
		</record>
	</data>

	<data>
		<template id="margo_colors" name="Colors Margo" inherit_id="website.assets_frontend">
		  <xpath expr="." position="inside">
		    <link rel="stylesheet" href="/theme_margo/static/src/less/colors.less" />
		    <link rel="stylesheet" href="/theme_margo/static/src/less/customize_modal.less"/>
		  </xpath>
		</template>
	</data>
</openerp>
