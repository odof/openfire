<?xml version="1.0" encoding="utf-8" ?>
<openerp>

	<data noupdate="1">
		<!-- Jump to website after theme installation -->
		<record id="base.open_menu" model="ir.actions.todo">
			<field name="action_id" ref="website.action_website" />
			<field name="state">open</field>
		</record>
	</data>

	<data>
		<!-- Assets, less, js -->
		<record id="website_less.option_bootstrap_less" model="ir.ui.view">
			<field name="active">True</field>
		</record>

		<template id="less" name="theme_margo less" inherit_id="website.theme"
			active="True" priority="1">
			<xpath expr="." position="inside">
				<!-- Color CSS Styles -->
				<link href="/theme_margo/static/src/less/colors.less" rel="stylesheet" type="text/less" />
				<link href="/theme_margo/static/src/less/customize_modal.less" rel="stylesheet" type="text/less" />
			</xpath>
		</template>

	</data>
</openerp>
