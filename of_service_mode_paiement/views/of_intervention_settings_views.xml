<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="of_service_mode_paiement_view_of_intervention_settings" model="ir.ui.view">
        <field name="name">of.service.mode.paiement.view.of.intervention.settings</field>
        <field name="model">of.intervention.settings</field>
        <field name="inherit_id" ref="of_planning.view_of_intervention_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='intervention']/div[@name='general_config']" position="inside">
                <div>
                    <field name="group_of_intervention_sepa" class="oe_inline" style="vertical-align: middle;"/>
                    <label string="Gérer les prélèvements SEPA depuis les Demandes d'intervention" style="vertical-align: middle;"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
