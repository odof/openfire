                <strong t-if="o.partner_shipping_id != o.partner_id">Adresse de facturation&amp;nbsp;:</strong><br/>
                <t t-set="the_address" t-value="o.partner_id"/>
                <t t-if="o.pdf_afficher_nom_parent()">
