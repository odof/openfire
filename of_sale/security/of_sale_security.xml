            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="group_of_sale_print_multiimage" model="res.groups">
            <field name="name">Print product images on Sale Order</field>
            <field name="category_id" ref="base.module_category_hidden"/>
