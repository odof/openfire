<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Sale config wizard -->
    <record id="of_sale_view_sale_config_settings" model="ir.ui.view">
        <field name="name">of sale settings</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="sale.view_sales_config"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='deposit_product_id_setting']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='deposit_product_id_setting']" position="after">
                <field name="of_deposit_product_categ_id_setting" class="oe_inline"/>
            </xpath>
            <xpath expr="//group[@name='quotations_sales']" position="inside">
                <field name="of_invoice_grouped" widget="radio"/>
                <label for="of_position_fiscale"/>
                <div name="of_position_fiscale">
                    <field name="of_position_fiscale" class="oe_inline"/>
                    <span>Forcer l'utilisation des positions fiscales dans les devis/commandes</span>
                </div>
                <label for="group_of_order_line_option"/>
                <div name="group_of_order_line_option">
                    <field name="group_of_order_line_option" class="oe_inline"/>
                    <span>Activer les options de ligne de commande</span>
                </div>
            </xpath>
            <xpath expr="//field[@name='default_invoice_policy']" position="after">
                <field name="of_propagate_payment_term"/>
                <field name="group_of_sale_multiimage" widget="radio"/>
                <field name="group_of_sale_print_attachment" widget="radio"/>
                <label for="of_sale_print_multiimage_level" attrs="{'invisible': [('group_of_sale_multiimage', '!=', 1)]}"/>
                <div name="of_sale_print_multiimage_level" attrs="{'invisible': [('group_of_sale_multiimage', '!=', 1)]}">
                    <field name="of_sale_print_multiimage_level" widget="radio"/>
                    <span attrs="{'invisible': [('of_sale_print_multiimage_level', '!=', 1)]}">Une première image de l'article sera affichée à la ligne et le reste en annexe</span>
                </div>
                <field name="group_of_sale_print_one_image" invisible="1"/>
                <field name="group_of_sale_print_multiimage" invisible="1"/>
            </xpath>
            <xpath expr="//div[@id='main']" position="inside">
                <group name="rubrique_report" string="Devis &amp; commandes PDF">
                    <label for="pdf_adresse_civilite"/>
                    <div name="pdf_afficher_civilite">
                        <field name="pdf_adresse_civilite" class="oe_inline"/>
                        <span>Afficher la civilité dans les rapports PDF</span>
                    </div>
                    <label for="pdf_adresse_nom_parent"/>
                    <div name="pdf_afficher_nom_parent">
                        <field name="pdf_adresse_nom_parent" class="oe_inline"/>
                        <span>Remplacer le nom du contact par celui du parent dans les rapports PDF</span>
                    </div>
                    <label for="pdf_adresse_telephone"/>
                    <div name="pdf_afficher_telephone" colspan="1" col="3">
                        <field name="pdf_adresse_telephone" class="oe_inline" colspan="2" no_label="1"/>
                        <span colspan="1"></span>
                    </div>
                    <label for="pdf_adresse_mobile"/>
                    <div name="pdf_adresse_mobile" colspan="1" col="3">
                        <field name="pdf_adresse_mobile" class="oe_inline" colspan="2" no_label="1"/>
                        <span colspan="1"></span>
                    </div>
                    <label for="pdf_adresse_fax"/>
                    <div name="pdf_afficher_fax" colspan="1" col="3">
                        <field name="pdf_adresse_fax" class="oe_inline" colspan="2" no_label="1"/>
                        <span colspan="1"></span>
                    </div>
                    <label for="pdf_adresse_email"/>
                    <div name="pdf_afficher_email" colspan="1" col="3">
                        <field name="pdf_adresse_email" class="oe_inline" colspan="2" no_label="1"/>
                        <span colspan="1"></span>
                    </div>
                    <label for="pdf_display_product_ref_setting"/>
                    <div name="pdf_display_product_ref_setting">
                        <field name="pdf_display_product_ref_setting" class="oe_inline"/>
                        <span>Afficher les références produits dans les rapports PDF</span>
                    </div>
                    <label for="pdf_date_validite_devis"/>
                    <div name="pdf_date_validite_devis">
                        <field name="pdf_date_validite_devis" class="oe_inline"/>
                        <span>Afficher la date de validité dans le rapport PDF des devis</span>
                    </div>
                    <label for="pdf_vt_pastille"/>
                    <div name="pdf_vt_pastille">
                        <field name="pdf_vt_pastille" class="oe_inline"/>
                        <span>Afficher la date de visite technique dans une pastille d'information dans le rapport PDF des devis</span>
                    </div>
                    <label for="pdf_afficher_multi_echeances"/>
                    <div name="pdf_afficher_multi_echeances">
                        <field name="pdf_afficher_multi_echeances" class="oe_inline"/>
                        <span>Afficher les échéances multiples dans les rapports PDF</span>
                    </div>
                    <label for="pdf_hide_global_address_label"/>
                    <div name="pdf_hide_global_address_label">
                        <field name="pdf_hide_global_address_label" class="oe_inline"/>
                        <span>Masquer le libellé "Adresse de livraison et de facturation" dans le rapport PDF des devis</span>
                    </div>
                    <label for="of_color_bg_section"/>
                    <div name="of_color_bg_section_setting">
                        <field name="of_color_bg_section" class="oe_inline" widget="color"/>
                    </div>
                    <label for="of_color_font"/>
                    <div name="of_color_font">
                        <field name="of_color_font" class="oe_inline" widget="color"/>
                    </div>
                    <label string="(OF) Pastille commercial" for="pdf_masquer_pastille_commercial"/>
                    <div name="pdf_masquer_pastille_commercial">
                        <field name="pdf_masquer_pastille_commercial" class="oe_inline"/>
                        <span>NE PAS afficher dans les rapports PDF</span>
                    </div>
                    <label string="(OF) Pastille commercial" for="pdf_mail_commercial"
                           attrs="{'invisible': [('pdf_masquer_pastille_commercial', '=', True)]}"/>
                    <div name="pdf_mail_commercial"
                         attrs="{'invisible': [('pdf_masquer_pastille_commercial', '=', True)]}">
                        <field name="pdf_mail_commercial" class="oe_inline"/>
                        <span>Afficher l'email du commercial dans la pastille des rapports PDF</span>
                    </div>
                    <label string="(OF) Pastille conditions de règlement" for="pdf_masquer_pastille_payment_term"/>
                    <div name="pdf_masquer_pastille_payment_term">
                        <field name="pdf_masquer_pastille_payment_term" class="oe_inline"/>
                        <span>NE PAS afficher dans les rapports PDF</span>
                    </div>
                    <label for="of_pdf_taxes_display"/>
                    <div name="of_pdf_taxes_display">
                        <field name="of_pdf_taxes_display" class="oe_inline"/>
                        <span>Afficher le tableau de détail des taxes dans les rapports PDF</span>
                    </div>
                </group>
            </xpath>
            <xpath expr="//group[@name='quotations_sales']" position="inside">
                <label for="stock_warning_setting"/>
                <div name="stock_warning_setting">
                    <field name="stock_warning_setting" class="oe_inline"/>
                    <span>Afficher les messages d'avertissement de stock</span>
                </div>
            </xpath>
            <xpath expr="//group[last()]" position="after">
                <group name="temp_parameters" string="Paramètres temporaires">
                    <label for="of_allow_quote_addition"/>
                    <div name="of_allow_quote_addition">
                        <field name="of_allow_quote_addition" class="oe_inline"/>
                        <span>Autoriser l'ajout de devis complémentaire aux bons de commandes</span>
                    </div>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
