<!--                                    <t t-if="o.name">-->
<!--                                        <div class="h5" style="padding: 0px 16px;">-->
<!--                                           <div>-->
<!--                                               <span>Libellé&amp;nbsp;: </span><span t-field="o.name"/>-->
<!--                                           </div>-->
<!--                                        </div>-->
<!--                                    </t>-->
<!--                                </div>-->
