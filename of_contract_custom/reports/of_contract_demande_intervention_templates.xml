<!--                                           <div>-->
<!--                                               <span>Magasin&amp;nbsp;: </span><span t-field="o.company_id"/>-->
<!--                                           </div>-->
<!--                                        </div>-->
<!--                                    </t>-->
<!--                                </div>-->
<!--                            </div>-->
<!--                        </div>-->
