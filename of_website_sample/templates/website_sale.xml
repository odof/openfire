<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- /shop/product product page -->
    <template id="product" inherit_id="website_sale.product" name="Product (of_website_sample)">
        <xpath expr="//form[@class='js_add_cart_variants']" position="after">
            <form t-if="product.sudo().sample_id" action="/shop/cart/update" class="js_add_sample_cart_variants" t-att-data-attribute_value_ids="attribute_value_ids" method="POST" id="form_sample_to_cart">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                <input type="hidden" class="product_id" name="product_id" t-att-value="product.sudo().sample_id and product.sudo().sample_id.product_variant_id.id"/>
                <a id="add_sample_to_cart" class="btn btn-primary mt8 a-submit" href="#">Add sample to Cart</a>
            </form>
        </xpath>
    </template>

    <!-- /shop/cart page -->
    <template id="cart_lines" inherit_id="website_sale.cart_lines" name="Sample Shopping Cart Lines">
        <xpath expr="//a[@t-attf-href='/shop/product/#{ slug(line.product_id.product_tmpl_id) }']" position="attributes">
            <attribute name="t-attf-href">#{line.product_id.product_tmpl_id.is_sample and '/shop/product/'+slug(line.product_id.product_tmpl_id.sample_parent_id) or '/shop/product/'+slug(line.product_id.product_tmpl_id)}</attribute>
        </xpath>
        <xpath expr="//div[contains(@class, 'oe_website_spinner')]/input" position="attributes">
            <attribute name="t-if">not line.product_id.product_tmpl_id.is_sample</attribute>
        </xpath>
        <xpath expr="//div[contains(@class, 'oe_website_spinner')]/input" position="after">
            <input type="text" class="js_quantity form-control quantity"
                   t-if="line.product_id.product_tmpl_id.is_sample"
                   readonly="readonly"
                   t-att-data-line-id="line.id"
                   t-att-data-product-id="line.product_id.id"
                   t-att-value="int(line.product_uom_qty) == line.product_uom_qty and int(line.product_uom_qty) or line.product_uom_qty"/>
        </xpath>
        <xpath expr="//div[contains(@class, 'oe_website_spinner')]/a[1]" position="attributes">
            <attribute name="t-attf-class">mb8 input-group-addon js_add_cart_json btn #{line.product_id.product_tmpl_id.is_sample and 'disabled'}</attribute>
        </xpath>
        <xpath expr="//div[contains(@class, 'oe_website_spinner')]/a[2]" position="attributes">
            <attribute name="t-attf-class">mb8 input-group-addon float_left js_add_cart_json btn #{line.product_id.product_tmpl_id.is_sample and 'disabled'}</attribute>
        </xpath>
    </template>

</odoo>
