<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="modal_error" name="Optional Products Error">
        <div id="modal_optional_products_error" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                        <h4 class="modal-title" id="myModalLabel">You can't add this item in your cart</h4>
                    </div>
                    <div class="modal-body">
                        <div class="mt8">
                            You can't make an order of both samples and products. You need to empty your cart before adding that item.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-defaul close" data-dismiss="modal" aria-hidden="true">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </template>

</odoo>
