<odoo>
    <data>

<!--##############################################################################-->
<!--########################### ______ Produits ______ ###########################-->
<!--##############################################################################-->

        <!-- Ajout champ frais de port product.product -->
        <record id="of_product_product_form_view" model="ir.ui.view">
            <field name="name">of.product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="barcode" position="after">
                    <field name="of_frais_port" widget='monetary'/>
                    <field name="id" groups="base.group_no_one"/>
                </field>
            </field>
        </record>

        <!-- Ajout champ frais de port product.template-->
        <record id="of_product_template_form_view" model="ir.ui.view">
            <field name="name">of.product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="barcode" position="after">
                    <field name="of_frais_port" widget='monetary'/>
                    <field name="id" groups="base.group_no_one"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
