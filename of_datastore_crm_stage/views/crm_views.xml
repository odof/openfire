<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Sale Order Search View -->
    <record id="of_datastore_crm_stage_crm_stage_tree" model="ir.ui.view">
        <field name="name">of.datastore.crm.stage.crm.stage.tree</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="of_crm_stage_id"/>
            </xpath>
        </field>
    </record>

    <!-- Sale Order Search View -->
    <record id="of_datastore_crm_stage_crm_stage_form" model="ir.ui.view">
        <field name="name">of.datastore.crm.stage.crm.stage.form</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="of_crm_stage_id"/>
            </xpath>
        </field>
    </record>

</odoo>
