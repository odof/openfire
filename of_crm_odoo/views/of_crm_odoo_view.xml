<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- CRM Lead Form View  -->
        <record model="ir.ui.view" id="of_crm_case_form_view_leads">
        <field name="name">of.crm.lead.form - Leads</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
        <field name="arch" type="xml">
            <div class="o_address_format" position="after">
                <field name="website" widget="url"/>
            </div>
        </field>
        </record>

        <record model="ir.ui.view" id="of_crm_case_form_view_oppor">
            <field name="name">of.crm.lead.form - Opportunities</field>
            <field name="model">crm.lead</field>
            <field name="priority">20</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <field name="phone" position="after">
                    <field name="website" widget="url"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
