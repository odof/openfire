<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Product Template -->

    <record id="of_partner_fuel_stock_product_template_form_view" model="ir.ui.view">
        <field name="name">of.partner.fuel.stock.product.template.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="inside">
                <group name="storage_checkout" string="Stockage &amp; Retrait">
                    <field name="of_storage"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
