        <field name="name">of.kit.product.kit.line.form</field>
        <field name="model">of.product.kit.line</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="kit_id"/>
                    <field name="product_id"/>
