    <template id="of_questionnaire_extension_fiche_intervention_report2"
              inherit_id="of_service_parc_installe.of_parc_installe_extension_fiche_intervention_report2">
        <xpath expr="//div[@name='products']" position="after">
            <div name="questions" style="width: 100%;">
                <t t-if="template.fi_surveys and template.fi_surveys_rdv and o.question_ids" name="surveys_if">
                    <t t-if="template.fi_surveys_rdv" name="survey_rdv">
                        <div class="row h4 mb4">
                            <div class="col-xs-12">
                                <strong>Questionnaire d'intervention</strong>
                            </div>
                        </div>
                        <t t-set="first" t-value="True"/>
                        <div class="row"
                             style="border: 1px solid lightgray; margin-bottom: 12px; width: 100%; border-radius: 10px;">
                            <t t-foreach="o.question_ids" t-as="question">
                                <t t-if="question.answer_type not in ['photo', 'drawing']">
                                    <div class="col-xs-12" style="display: table; padding: 0px;">
                                        <div style="display: table-cell;" t-attf-style="#{'' if first else 'border-top: 1px solid lightgray;'}">
                                            <!-- Questions -->
                                            <div class="h5" style="padding: 0px 16px;">
                                                <strong><span t-field="question.name"/><span>&amp;nbsp;:</span></strong>
                                                <span t-field="question.definitive_answer"/>
                                            </div>
                                        </div>
                                        <t t-if="first">
                                            <t t-set="first" t-value="False"/>
                                        </t>
                                    </div>
                                </t>
                            </t>
                        </div>
                    </t>
                </t>
            </div>
        </xpath>
    </template>

</odoo>
