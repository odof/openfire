<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- inherit_id sur le assets_backend de web_calendar plutôt que web
         pour pouvoir déplacer la librairie fullcalendar -->
    <template id="assets_backend" name="planning_view_assets" inherit_id="web_calendar.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/of_planning_view/static/src/less/of_planning_view.less" />
            <script type="text/javascript" src="/of_planning_view/static/src/js/of_planning_view.js"/>
            <script type="text/javascript" src="/of_planning_view/static/src/js/calendar_view.js"/>
        </xpath>
    </template>
</odoo>