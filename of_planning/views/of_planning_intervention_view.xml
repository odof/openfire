            <field name="arch" type="xml" >
                <form class="oe_form_configuration">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Libellé" class="oe_edit_only" attrs="{'readonly':[('verr', '=', True)]}"/>
