<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action imprimer dans le planning d'intervention -->
    <report id="of_planning_fiche2_intervention_report"
            string="Fiche d'intervention2"
            model="of.planning.intervention"
            report_type="qweb-pdf"
            name="of_planning.of_planning_fiche2_intervention_report_big_template"
            paperformat="report.paperformat_euro">
    </report>

    <!-- Template pour planning -->
    <template id="of_planning_fiche2_intervention_report_big_template">
        <t t-call="of_planning.of_planning_fiche2_intervention_report_template"/>
    </template>

    <template id="of_planning_fiche2_intervention_report_template">
        <!-- L'impression de ce rapport peut être déclenché des devis/commandes ou du planning.
        L'affichage diffère selon l'origine. -->
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="template" t-value="o.template_id or o.env.ref('of_planning.of_planning_default_intervention_template', raise_if_not_found=False) or o.template_id"/>
                <t t-set="o" t-value="o.with_context(of_report_name=template.fi_title)"/>
                <t t-set="order" t-value="o.order_id"/>
                <t t-call="report.external_layout">
                    <div class="page">
                        <t t-if="template">
                            <div name="first" style="width: 100%; page-break-inside: avoid;">
                                <div name="order" style="width: 47%; float: left; page-break-inside: avoid;">
                                    <t t-if="template.fi_order and order">
                                        <div class="row h4 mb4">
                                            <div class="col-xs-12">
                                                <strong>Commande</strong>
                                            </div>
                                        </div>
                                        <div class="row"
                                             style="border: 1px solid lightgray; margin-bottom: 12px; width: 100%; border-radius: 10px;">
                                            <div class="col-xs-12" style="display: table; padding: 0px;">
                                                <div style="display: table-cell;">
                                                    <!-- Client -->
                                                    <t t-if="template.fi_order_client">
                                                        <div class="h5" style="padding: 0px 16px;">
                                                            <strong><span>Client&amp;nbsp;:</span></strong>
                                                            <span t-field="order.partner_id.name"/>
                                                        </div>
                                                    </t>
                                                    <!-- Nom de la commande -->
                                                    <t t-if="template.fi_order_name">
                                                        <div style="margin-top: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                                        <div class="h5" style="padding: 0px 16px;">
                                                            <strong><span>Commande associée&amp;nbsp;:</span></strong>
                                                            <span t-field="order.name"/>
                                                        </div>
                                                    </t>
                                                    <!-- Date de confirmation -->
                                                    <t t-if="template.fi_order_confirmation_date">
                                                        <div style="margin-top: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                                        <div class="h5" style="padding: 0px 16px;">
                                                            <strong><span>Date de confirmation&amp;nbsp;:</span></strong>
                                                            <span t-field="order.confirmation_date"/>
                                                        </div>
                                                    </t>
                                                    <!-- Libellé de l'intervention -->
                                                    <t t-if="template.fi_order_interv_label">
                                                        <div style="margin-top: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                                        <div class="h5" style="padding: 0px 16px;">
                                                            <strong><span>Libellé&amp;nbsp;:</span></strong>
                                                            <span t-field="o.name"/>
                                                        </div>
                                                    </t>
                                                    <!-- Magasin -->
                                                    <t t-if="template.fi_order_company">
                                                        <div style="margin-top: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                                        <div class="h5" style="padding: 0px 16px;">
                                                            <strong><span>Magasin&amp;nbsp;:</span></strong>
                                                            <span t-field="order.company_id.name"/>
                                                        </div>
                                                    </t>
                                                    <!-- Vendeur -->
                                                    <t t-if="template.fi_order_seller">
                                                        <div style="margin-top: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                                        <div class="h5" style="padding: 0px 16px;">
                                                            <strong><span>Vendeur&amp;nbsp;:</span></strong>
                                                            <span t-field="order.user_id.name"/>
                                                        </div>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                                <div name="invoicing" style="width: 47%; float: right; page-break-inside: avoid;">
                                    <t t-if="template.fi_invoicing">
                                        <div class="row h4 mb4">
                                            <div class="col-xs-12">
                                                <strong>Facturation</strong>
                                            </div>
                                        </div>
                                        <div class="row"
                                             style="border: 1px solid lightgray; margin-bottom: 12px; width: 100%; border-radius: 10px;">
                                            <div class="col-xs-12" style="display: table; padding: 0px;">
                                                <div style="display: table-cell;">
                                                    <!-- Total HT -->
                                                    <t t-if="template.fi_invoicing_ht">
                                                        <div class="h5" style="padding: 0px 16px;">
                                                            <strong><span>Total HT&amp;nbsp;:</span></strong>
                                                            <span t-field="o.price_subtotal"/>
                                                        </div>
                                                    </t>
                                                    <!-- Taxes -->
                                                    <t t-if="template.fi_invoicing_taxes">
                                                        <div style="margin-top: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                                        <div class="h5" style="padding: 0px 16px;">
                                                            <strong><span>Taxes&amp;nbsp;:</span></strong>
                                                            <span t-field="o.price_tax"/>
                                                        </div>
                                                    </t>
                                                    <!-- Total TTC -->
                                                    <t t-if="template.fi_invoicing_ttc">
                                                        <div style="margin-top: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                                        <div class="h5" style="padding: 0px 16px;">
                                                            <strong><span>Total TTC&amp;nbsp;:</span></strong>
                                                            <span t-field="o.price_total"/>
                                                        </div>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom: 12px; width: 100%; "/>
                            <div name="second" style="width: 100%; page-break-inside: avoid;">
                                <t t-if="template.fi_rdv">
                                    <div class="row h4 mb4">
                                        <div class="col-xs-12">
                                            <strong>Intervention</strong>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-bottom: 4px; width: 100%; "/>
                                    <div name="intervention" style="width: 47%; float: left; page-break-inside: avoid;">
                                        <div class="row"
                                             style="border: 1px solid lightgray; margin-bottom: 12px; width: 100%; border-radius: 10px;">
                                            <div class="col-xs-12" style="display: table; padding: 0px;">
                                                <div style="display: table-cell;">
                                                    <!-- Date de début -->
                                                    <t t-if="template.fi_rdv_date_start">
                                                        <div class="h5" style="padding: 0px 16px;">
                                                            <strong><span>Date de début&amp;nbsp;:</span></strong>
                                                            <span t-field="o.date"/>
                                                        </div>
                                                    </t>
                                                    <!-- Date de fin -->
                                                    <t t-if="template.fi_rdv_date_end">
                                                        <div style="margin-top: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                                        <div class="h5" style="padding: 0px 16px;">
                                                            <strong><span>Date de fin&amp;nbsp;:</span></strong>
                                                            <span t-field="o.date_deadline"/>
                                                        </div>
                                                    </t>
                                                    <!-- Tâche -->
                                                    <t t-if="template.fi_rdv_task">
                                                        <div style="margin-top: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                                        <div class="h5" style="padding: 0px 16px;">
                                                            <strong><span>Tâche&amp;nbsp;:</span></strong>
                                                            <span t-field="o.tache_id.name"/>
                                                        </div>
                                                    </t>
                                                    <!-- description de la tâche -->
                                                    <t t-if="template.fi_rdv_task_description">
                                                        <div style="margin-top: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                                        <div class="h5" style="padding: 0px 16px;">
                                                            <strong><span>Description de la tâche&amp;nbsp;:</span></strong>
                                                            <span t-field="o.tache_id.description"/>
                                                        </div>
                                                    </t>
                                                    <!-- Durée -->
                                                    <t t-if="template.fi_rdv_duration">
                                                        <div style="margin-top: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                                        <div class="h5" style="padding: 0px 16px;">
                                                            <strong><span>Durée&amp;nbsp;:</span></strong>
                                                            <span t-field="o.duree" t-field-options='{"widget": "duration", "unit": "hour", "round": "minute"}'/>
                                                        </div>
                                                    </t>
                                                    <!-- Technicien(s) -->
                                                    <t t-if="template.fi_rdv_tech">
                                                        <div style="margin-top: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                                        <div class="h5" style="padding: 0px 16px;">
                                                            <strong><span>Technicien(s)&amp;nbsp;:</span></strong>
                                                            <t t-foreach="o.employee_ids" t-as="employee">
                                                                <span t-raw="employee_value.name"/>&amp;nbsp;
                                                            </t>
                                                        </div>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <t t-if="o.address_id and (template.fi_rdv_address or (template.fi_rdv_mail and o.address_id.email) or (template.fi_rdv_phone and o.address_id.phone))">
                                        <div name="adresses" style="width: 47%; float: right; page-break-inside: avoid;">
                                            <div class="row"
                                                 style="border: 1px solid lightgray; margin-bottom: 12px; width: 100%; border-radius: 10px;">
                                                <div class="col-xs-12" style="display: table; padding: 0px;">
                                                    <div style="display: table-cell;">
                                                        <!-- Adresses -->
                                                        <t t-if="template.fi_rdv_address">
                                                            <div class="h5" style="padding: 0px 16px;">
                                                                <div><strong>Adresse d'intervention&amp;nbsp;:</strong></div>
                                                                <t t-if="o.address_id">
                                                                    <div style="padding-top: 4px" t-field="o.address_id" t-field-options="{'widget': 'contact', 'fields': ['address'], 'no_marker': true }"/>
                                                                </t>
                                                                <t t-else="">
                                                                    <!-- Espace vide pour écrire l'adresse à la main -->
                                                                    <div>&amp;nbsp;</div>
                                                                    <div>&amp;nbsp;</div>
                                                                    <div>&amp;nbsp;</div>
                                                                </t>

                                                            </div>
                                                        </t>
                                                        <!-- Contacts -->
                                                        <t t-if="template.fi_rdv_mail or template.fi_rdv_phone">
                                                            <div style="margin-top: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                                            <div class="h5" style="padding: 0px 16px;">
                                                                <div><strong>Contact&amp;nbsp;:</strong></div>
                                                                <t t-if="template.fi_rdv_mail and o.address_id.email">
                                                                    <div t-field="o.address_id.email"/>
                                                                </t>
                                                                <t t-if="template.fi_rdv_phone and o.address_id.phone">
                                                                    <div t-field="o.address_id.phone"/>
                                                                </t>
                                                            </div>
                                                        </t>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </t>
                            </div>
                            <div class="row" style="margin-bottom: 12px; width: 100%; "/>
                            <div name="third" style="width: 100%; ">
                                <div name="descriptions" style="width: 47%; float: right;">
                                    <t t-if="template.fi_description">
                                        <div class="row h4 mb4">
                                            <div class="col-xs-12">
                                                <strong>Description</strong>
                                            </div>
                                        </div>
                                        <div class="row"
                                             style="border: 1px solid lightgray; margin-bottom: 12px; width: 100%; border-radius: 10px;">
                                            <div class="col-xs-12" style="display: table; padding: 0px;">
                                                <div style="display: table-cell;">
                                                    <!-- Description -->
                                                    <t t-if="template.fi_description and o.description" name="description_rdv" style="page-break-inside: avoid;">
                                                        <div class="h5" style="padding: 0px 16px;">
                                                            <span t-field="o.cleantext_description"/>
                                                        </div>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                            <div name="products" style="width: 100%; page-break-inside: avoid;">
                                <t t-if="template.fi_products and template.fi_products_order and order">
                                    <div class="row h4 mb4">
                                        <div class="col-xs-12"><strong>Produits et travaux</strong></div>
                                    </div>
                                    <div class="row" style="border: 1px solid lightgray; margin-bottom: 12px; width: 100%; border-radius: 10px;">
                                        <t t-foreach="order.order_lines_layouted()" t-as="page">
                                            <table class="table table-condensed" style="padding-bottom: 0px; margin-bottom: 0px">
                                                <thead>
                                                    <tr colspan="3">
                                                        <th class="col-xs-9" style="vertical-align: middle">Description</th>
                                                        <th class="col-xs-2 text-right">Quantité prévue</th>
                                                        <th class="col-xs-1 text-center">· Posé</th>
                                                    </tr>
                                                </thead>
                                                <tbody class="sale_tbody">
                                                    <t t-foreach="page" t-as="layout_category">
                                                        <t t-if="layout_category_size > 1 or page_size > 1" groups="sale.group_sale_layout">
                                                            <tr class="active">
                                                                <td colspan="12" style="font-weight: bold; border-bottom: 1px solid black;">&amp;bull;
                                                                    <t t-esc="layout_category['name']"/>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                        <!-- Lignes de commande -->
                                                        <t t-foreach="layout_category['lines']" t-as="l">
                                                            <tr>
                                                                <td>
                                                                    <span t-field="l.name"/>
                                                                </td>
                                                                <td class="text-right">
                                                                    <span t-field="l.product_uom_qty"/>
                                                                    <span t-field="l.product_uom" groups="product.group_uom"/>
                                                                </td>
                                                                <td>
                                                                    <span class="text-right"> </span>
                                                                </td>
                                                            </tr>
                                                            <!-- Afficher les composants du kit -->
                                                            <t t-if="l.of_is_kit">
                                                                <t t-foreach="l.kit_id.kit_line_ids" t-as="comp">
                                                                    <tr>
                                                                        <td>
                                                                            <span style="padding: 0 8px;">-&gt;</span><span t-field="comp.name"/>
                                                                        </td>
                                                                        <td class="text-right">
                                                                            <span t-field="comp.qty_total"/>
                                                                            <span t-field="comp.product_uom_id" groups="product.group_uom"/>
                                                                        </td>
                                                                        <td>
                                                                            <span class="text-right"> </span>
                                                                        </td>
                                                                    </tr>
                                                                </t>
                                                            </t>
                                                        </t>
                                                    </t>
                                                </tbody>
                                            </table>
                                            <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
                                                <p style="page-break-before:always;"> </p>
                                            </t>
                                        </t>
                                    </div>
                                </t>
                                <t t-if="template.fi_products and template.fi_products_picking and o.picking_id">
                                    <t t-foreach="o.picking_lines_layouted()" t-as="page">
                                        <table name="picking_lines_layouted" class="table table-condensed">
                                            <thead>
                                                <tr>
                                                    <th name="descr" style="width: 80%">Description</th>
                                                    <th name="qty_initial" class="text-right" style="width: 10%">Qté prévue</th>
                                                    <th name="qty_done" class="text-right" style="width: 10%">Posée</th>
                                                </tr>
                                            </thead>
                                            <tbody class="sale_tbody">
                                                <t t-foreach="page" t-as="layout_category">
                                                    <t>
                                                        <tr class="active">
                                                            <td colspan="3" t-att-style="'background-color: #F0F0F0; font-weight:  bold; border-bottom: 1px solid black;'">&amp;bull;
                                                                <t t-esc="layout_category['name']"/>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                    <!-- Lines associated -->
                                                    <t t-foreach="layout_category['lines']" t-as="l">
                                                        <tr>
                                                            <td name="descr">
                                                                <span t-field="l.name"/>
                                                            </td>
                                                            <th name="qty_initial" class="text-right">
                                                                <span t-field="l.product_uom_qty"/>
                                                            </th>
                                                            <th name="qty_done" class="text-right">
                                                                <span>0</span>
                                                            </th>
                                                        </tr>
                                                    </t>
                                                </t>
                                            </tbody>
                                        </table>
                                    </t>
                                </t>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
