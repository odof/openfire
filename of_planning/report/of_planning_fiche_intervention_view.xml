<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_euro_portrait_custom" model="report.paperformat">
        <field name="name">European A4 Custom Portrait</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">28</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">12</field>
        <field name="margin_right">12</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">18</field>
        <field name="dpi">90</field>
    </record>

    <!-- Action imprimer dans le planning d'intervention -->
    <report id="of_planning_fiche_intervention_report"
        string="Fiche intervention"
        model="of.planning.intervention"
        report_type="qweb-pdf"
        name="of_planning.of_planning_fiche_intervention_report_template"
        paperformat="paperformat_euro_portrait_custom">
    </report>

    <!-- Action imprimer dans les devis/commandes -->
    <report id="of_sale_fiche_intervention_report"
        string="Fiche intervention"
        model="sale.order"
        report_type="qweb-pdf"
        name="of_planning.of_sale_order_fiche_intervention_report_template"
        paperformat="paperformat_euro_portrait_custom">
    </report>

    <template id="of_planning.of_internal_layout">
        <!-- Multi-sociétés -->
        <t t-if="o and 'o.company_id'"><t t-set="company" t-value="o.company_id"/></t>
        <t t-if="not o or not 'company_id' in o"><t t-set="company" t-value="res_company"/></t>
        <!-- Header -->
        <div class="header">
            <div class="row">
                <div class="col-xs-3 text-center">
                    <div style="max-width: 90%; max-height: 90%; vertical-align: middle;">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-width: 100%; max-height: 80px;"/>
                    </div>
                </div>
                <div class="h4 col-xs-6 text-center" style="padding-top: 2px">
                    <div>Fiche intervention</div>
                    <t t-if="order.partner_id">
                        <strong><div style="max-width: 100%; padding-top: 10px" t-field="order.partner_id"></div></strong>
                    </t>
                    <t t-else="o.address_id">
                        <strong><div  style="max-width: 100%; padding-top: 10px" t-field="o.address_id" t-field-options="{'widget': 'contact', 'fields': ['name']}"></div></strong>
                    </t>
                </div>
                <div class="h5 col-xs-3 text-right" style="vertical-align: top;">
                    <t t-if="order">
                        <span>Commande&amp;nbsp;: </span>
                        <span t-field="order.name"/>
                    </t>
                </div>
            </div>
        </div>
        <t t-raw="0"/>
    </template>

    <!-- Template pour devis/commandes -->
    <template id="of_sale_order_fiche_intervention_report_template">
        <t t-set="docs" t-value="[(i, o) for o in docs for i in (o.intervention_ids or [o.intervention_ids])]"/>
        <t t-call="of_planning.of_fiche_intervention_report_template"/>
    </template>

    <!-- Template pour planning -->
    <template id="of_planning_fiche_intervention_report_template">
        <t t-set="docs" t-value="[(o, o.order_id) for o in docs]"/>
        <t t-call="of_planning.of_fiche_intervention_report_template"/>
    </template>

    <template id="of_fiche_intervention_report_template">
        <!-- L'impression de ce rapport peut être déclenché des devis/commandes ou du planning.
        L'affichage diffère selon l'origine. -->
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="vals">
                <t t-set="o" t-value="vals[0]"/>
                <t t-set="order" t-value="vals[1]"/>
                <t t-call="of_planning.of_internal_layout">
                    <div class="page">

                        <!-- Commande (affichage conditionnel selon que vient du planning ou des devis/commandes) -->
                        <t t-if="order">
                            <div class="row h4 mb4">
                                <div class="col-xs-12"><strong>Commande</strong></div>
                            </div>
                            <div class="row" style="border: 1px solid lightgray; border-top: 2px solid black; margin-bottom: 12px">
                                <div class="col-xs-12" style="display: table; padding: 0px;">
                                    <div style="display: table-cell; width: 50%;">
                                         <div class="h5" style="padding: 0px 16px;">
                                             <t t-if="order.partner_id">
                                                <div><span>Client&amp;nbsp;: </span><strong><span t-field="order.partner_id"/></strong></div>
                                             </t>
                                             <t t-if="order">
                                                <div><span>Commande associée&amp;nbsp;: </span><span t-field="order.name"/></div>
                                             </t>
                                             <t t-if="order.confirmation_date">
                                                <t t-set="pre_d" t-value="order.confirmation_date"/>
                                                <t t-set="confirmation_date" t-value="pre_d[8:10] + '/' + pre_d[5:7] + '/' + pre_d[0:4]"/>
                                                <div><span>Date de confirmation&amp;nbsp;: </span><span t-esc="confirmation_date"/></div>
                                             </t>
                                         </div>
                                    </div>
                                    <div style="display: table-cell; width: 50%; border-left: 1px solid lightgray">
                                        <div>
                                            <div class="h5" style="padding: 0px 16px;">
                                                <t t-if="o.name">
                                                 <div><span>Libellé&amp;nbsp;: </span><span t-field="o.name"/></div>
                                                </t>
                                                <t t-if="o.company_id">
                                                    <div><span>Magasin&amp;nbsp;: </span><span t-field="o.company_id"/></div>
                                                </t>
                                                <t t-if="order.user_id">
                                                    <div><span>Vendeur&amp;nbsp;: </span><span t-field="order.user_id"/></div>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                        <t t-else="o.name or o.company_id">
                            <div class="row h4 mb4">
                                <div class="col-xs-12"><strong>Informations</strong></div>
                            </div>
                            <div class="row" style="border: 1px solid lightgray; border-top: 2px solid black; margin-bottom: 12px">
                                <div class="h5" style="padding: 0px 16px;">
                                    <t t-if="o.name">
                                        <div><span>Libellé&amp;nbsp;: </span><span t-field="o.name"/></div>
                                    </t>
                                    <t t-if="o.company_id">
                                        <div><span>Magasin&amp;nbsp;: </span><span t-field="o.company_id"/></div>
                                    </t>
                                </div>
                            </div>
                        </t>

                        <!-- Intervention -->
                        <div class="row h4 mb4">
                            <div class="col-xs-12"><strong>Intervention</strong></div>
                        </div>
                        <div class="row" style="border: 1px solid lightgray; border-top: 2px solid black; margin-bottom: 12px">
                            <div class="col-xs-12" style="display: table; padding: 0px;">
                                <div style="display: table-cell; width: 50%;">
                                    <div>
                                        <div class="h5" style="padding: 0px 16px;">
                                            <div>
                                                <span>Date intervention&amp;nbsp;:</span>
                                                <t t-if="o.date">
                                                    <strong><span t-field="o.date"/></strong>
                                                </t>
                                            </div>
                                        </div>
                                        <div style="margin-bottom: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                        <div class="h5" style="padding: 0px 16px;">
                                           <span>Tâche&amp;nbsp;:</span>
                                           <t t-if="o.equipe_id">
                                               <t t-if="o.tache_id">
                                                   <strong><span t-field="o.tache_id"/></strong>
                                               </t>
                                            </t>
                                        </div>
                                        <div style="margin-bottom: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                        <div class="h5" style="padding: 0px 16px;">
                                            <div>
                                                <span>Équipe&amp;nbsp;:</span>
                                                <t t-if="o.equipe_id">
                                                    <span t-field="o.equipe_id"/>
                                                </t>
                                            </div>
                                        </div>
                                        <div style="margin-bottom: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                        <div class="h5" style="padding: 0px 16px;">
                                            <div>
                                                <span>Durée&amp;nbsp;:</span>
                                                <t t-if="o.duree">
                                                    <span t-field="o.duree" t-field-options='{"widget": "duration", "unit": "hour", "round": "minute"}'></span>
                                                </t>
                                            </div>
                                        </div>
                                        <div style="margin-bottom: 8px; border-top: 1px solid lightgray; width: 100%;"/>
                                        <div class="h5" style="padding: 0px 16px;">
                                            <div>
                                                <span>Date fin&amp;nbsp;:</span>
                                                <t t-if="o.duree">
                                                    <span t-field="o.date_deadline"></span>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div style="display: table-cell; width: 50%; border-left: 1px solid lightgray">
                                    <div class="h5" style="padding: 0px 16px;">
                                        <div><strong>Adresse d'intervention</strong></div>
                                        <t t-if="o.address_id">
                                            <div style="padding-top: 4px" t-field="o.address_id" t-field-options="{'widget': 'contact', 'fields': ['address'], 'no_marker': true }"/>
                                        </t>
                                        <t t-elif="order.partner_shipping_id">
                                            <div style="padding-top: 4px" t-field="order.partner_shipping_id" t-field-options="{'widget': 'contact', 'fields': ['address'], 'no_marker': true }"/>
                                        </t>
                                        <t t-else="">
                                            <!-- Espace vide pour écrire l'adresse à la main -->
                                            <div>&amp;nbsp;</div>
                                            <div>&amp;nbsp;</div>
                                            <div>&amp;nbsp;</div>
                                        </t>
                                    </div>
                                    <div style="margin-bottom: 8px; border-top: 1px solid lightgray; width: 100%; padding: 0px 16px;"/>
                                    <div class="h5" style="padding: 0px 16px;">
                                        <div><strong>Contact</strong></div>
                                        <t t-if="o.address_id">
                                            <div style="padding-top: 4px" t-field="o.address_id" t-field-options="{'widget': 'contact', 'fields': ['name', 'phone', 'mobile']}"/>
                                        </t>
                                        <t t-elif="order.partner_shipping_id">
                                            <div style="padding-top: 4px" t-field="order.partner_shipping_id" t-field-options="{'widget': 'contact', 'fields': ['name', 'phone', 'mobile']}"/>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Produits et travaux (affichage conditionnel selon que vient du planning ou des devis/commandes) -->
                        <t t-if="order">
                            <div class="row h4 mb4">
                                <div class="col-xs-12"><strong>Produits et travaux</strong></div>
                            </div>
                            <div class="row" style="border: 1px solid lightgray; border-top: 2px solid black; padding: 0px 16px; ">
                                <t t-foreach="order.order_lines_layouted()" t-as="page">
                                    <table class="table table-condensed" style="padding-bottom: 0px; margin-bottom: 0px">
                                        <thead>
                                            <tr colspan="3">
                                                <th class="col-xs-9" style="vertical-align: middle">Description</th>
                                                <th class="col-xs-2 text-right">Quantité prévue</th>
                                                <th class="col-xs-1 text-center">· Posé</th>
                                            </tr>
                                        </thead>
                                        <tbody class="sale_tbody">
                                            <t t-foreach="page" t-as="layout_category">
                                                <t t-if="layout_category_size > 1 or page_size > 1" groups="sale.group_sale_layout">
                                                    <tr class="active">
                                                        <td colspan="12" style="font-weight: bold; border-bottom: 1px solid black;">&amp;bull;
                                                            <t t-esc="layout_category['name']"/>
                                                        </td>
                                                    </tr>
                                                </t>
                                                <!-- Lignes de commande -->
                                                <t t-foreach="layout_category['lines']" t-as="l">
                                                    <tr>
                                                        <td>
                                                            <span t-field="l.name"/>
                                                        </td>
                                                        <td class="text-right">
                                                            <span t-field="l.product_uom_qty"/>
                                                            <span t-field="l.product_uom" groups="product.group_uom"/>
                                                        </td>
                                                        <td>
                                                            <span class="text-right"> </span>
                                                        </td>
                                                    </tr>
                                                    <!-- Afficher les composants du kit -->
                                                    <t t-if="l.of_is_kit">
                                                        <t t-foreach="l.kit_id.kit_line_ids" t-as="comp">
                                                            <tr>
                                                                <td>
                                                                    <span style="padding: 0 8px;">-&gt;</span><span t-field="comp.name"/>
                                                                </td>
                                                                <td class="text-right">
                                                                    <span t-field="comp.qty_total"/>
                                                                    <span t-field="comp.product_uom_id" groups="product.group_uom"/>
                                                                </td>
                                                                <td>
                                                                    <span class="text-right"> </span>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                    </t>
                                                </t>
                                            </t>
                                        </tbody>
                                    </table>
                                    <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
                                        <p style="page-break-before:always;"> </p>
                                    </t>
                                </t>
                            </div>
                        </t>

                        <!-- Description (affichage conditionel si pas vide) -->
                        <t t-if="o.description and o.cleantext_description">
                            <div class="row h4 mb4">
                                <div class="col-xs-12"><strong>Description</strong></div>
                            </div>
                            <div class="row" style="border: 1px solid lightgray; border-top: 2px solid black; margin-bottom: 12px">
                                <div class="h5" style="padding: 0px 16px;">
                                    <div t-field="o.description"></div>
                                </div>
                            </div>
                        </t>

                        <!-- Notes intervention (affichage conditionel si pas vide) -->
                        <t t-if="order.of_notes_intervention">
                            <div class="row h4 mb4">
                                <div class="col-xs-12"><strong>Notes intervention</strong></div>
                            </div>
                            <div class="row" style="border: 1px solid lightgray; border-top: 2px solid black; margin-bottom: 12px">
                                <div class="h5" style="padding: 0px 16px;">
                                    <div t-field="order.of_notes_intervention"></div>
                                </div>
                            </div>
                        </t>

                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
