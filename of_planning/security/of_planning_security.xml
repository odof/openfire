<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

    <!--###########################################______Création de la categorie______###################################################-->

        <record model="ir.module.category" id="of_planning_pose_module_category">
            <field name="name">OF Planning Pose</field>
            <field name="description">Définit les droits d'accès au planning de pose OpenFire.</field>
            <field name="sequence">91</field>
        </record>

    <!--#############################################______Création des groupes______#####################################################-->

        <record id="of_group_planning_pose_user" model="res.groups">
            <field name="name">Utilisateur</field>
            <field name="category_id" ref="of_planning_pose_module_category"/>
        </record>

        <record id="of_group_planning_pose_manager" model="res.groups">
            <field name="name">Responsable</field>
            <field name="category_id" ref="of_planning_pose_module_category"/>
            <field name="implied_ids" eval="[(4, ref('of_group_planning_pose_user'))]"/>
        </record>

    <!--#############################################______Autorisations des menus______#####################################################-->
    
    <!--#############################################______Configuration______#####################################################-->

        <record model='ir.ui.menu' id='menu_of_planning_configuration'>
            <field name="groups_id" eval="[(6,0,[ref('base.group_hr_manager')])]"/>
        </record>

        <!--#############################################____Planning Pose____#####################################################-->
        
        <record model='ir.ui.menu' id='menu_of_planning_pose'>
            <field name="groups_id" eval="[(6,0,[ref('of_group_planning_pose_user')])]"/>
        </record>

    </data>
</openerp>
