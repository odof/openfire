<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Création groupe utilisateurs intranet -->
    <record id="of_group_intranet" model="res.groups">
        <field name="name">Intranet</field>
        <field name="category_id" ref="base.module_category_extra"/>
        <field name="comment">Droits OpenFire : donne les droits d'accès à l'intranet</field>
    </record>

    <record id="of_group_hidden" model="res.groups">
        <field name="name">Groupe spécial caché</field>
        <field name="comment">Groupe spécial OpenFire : permet de cacher certains éléments de menu</field>
    </record>

</odoo>
