<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Pour créer une boîte de dialogue pour confirmation approvisionnement -->

    <record id="of_popup_message_wizard_view" model="ir.ui.view">
        <field name="name">of.popup.message.wizard.form</field>
        <field name="model">of.popup.message.wizard</field>
        <field name="arch" type="xml">
            <form>
                <label string="Certaines lignes n'ont pas pu être approvisionnées." invisible="context.get('is_ok')"/>
                <label string="Toutes les lignes ont bien été approvisionnées." invisible="not context.get('is_ok')"/>
                <footer>
                    <button string="Ok" special="cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_of_popup_message_wizard" model="ir.actions.act_window">
        <field name="name">of.popup.message.wizard.action</field>
        <field name="res_model">of.popup.message.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="of_popup_message_wizard_view"/>
    </record>

</odoo>
