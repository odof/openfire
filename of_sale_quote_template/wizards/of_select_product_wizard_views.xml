<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="of_select_product_wizard_from_view" model="ir.ui.view">
        <field name="name">of.select.product.wizard.form.view</field>
        <field name="model">of.select.product.wizard</field>
        <field name="arch" type="xml">

            <form>
                <field name="quote_id" invisible="1"/>
                <field name="quote_template_layout_category_id" invisible="1"/>
                <label for="product_ids"/>
                <field name="product_ids" nolabel="1"/>
                <footer>
                    <button type="object" name="action_done" string="Valider" class="oe_highlight"/>
                    <button string="Annuler" class="oe_link" special="cancel" />
                </footer>
            </form>

        </field>
    </record>

    <record id="of_select_order_product_wizard_from_view" model="ir.ui.view">
        <field name="name">of.select.order.product.wizard.form.view</field>
        <field name="model">of.select.order.product.wizard</field>
        <field name="arch" type="xml">

            <form>
                <field name="order_id" invisible="1"/>
                <field name="order_layout_category_id" invisible="1"/>
                <label for="product_ids"/>
                <field name="product_ids" nolabel="1"/>
                <footer>
                    <button type="object" name="action_done" string="Valider" class="oe_highlight"/>
                    <button string="Annuler" class="oe_link" special="cancel" />
                </footer>
            </form>

        </field>
    </record>

</odoo>
