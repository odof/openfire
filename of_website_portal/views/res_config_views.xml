<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="of_website_portal_config_settings_view_form" model="ir.ui.view">
        <field name="name">of.website.portal.config.settings.form.inherit</field>
        <field name="model">website.config.settings</field>
        <field name="inherit_id" ref="website.view_website_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='social']" position="before">
                <group string="Portail" name="portals">
                    <field name="group_of_validate_order_from_portal"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
